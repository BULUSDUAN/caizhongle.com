@using Webdiyer.WebControls.Mvc;
@model PagedList<Lottery.Entity.UserInfo>
@{ViewBag.Title = "用户列表";}
<div>
    <form id="formSearch" class="form-inline well mt">
        <div class="form-group col-sm-2">
            <label>编号</label><input name="userInfo.ID" class="form-control" />
        </div>
        <div class="form-group">
            <label>用户名</label><input name="userInfo.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label>邮箱</label><input name="userInfo.Email" class="form-control" />
        </div>
        <div class="form-group">
             <label>&nbsp;</label>
            <input type="hidden" name="pageInfo.PageSize" value="10" />
            <input type="submit" value="搜索" class="btn btn-primary" />
        </div>
        <div class="pull-right"><input type="button" class="btn btn-primary" data-toggle="modal" data-target="#divNewUser" value="新建用户" /></div>
    </form>
</div>

<div id="divUpdateData"> 
    <table id="tableList" class="table table-striped table-bordered mt">        
        <tr>
            <th>编号</th>
            <th>用户名</th>
            <th>邮箱</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td><a href="javascript:void(0);">@item.ID</a></td>
                <td>@item.Name</td>
                <td>@item.Email</td>
            </tr>
        }
    </table>
    <div class="row">
        <div class="col-md-4">共 @Model.TotalPageCount 页 @Model.TotalItemCount 条记录，当前为第 @Model.CurrentPageIndex 页</div>
        @Ajax.Pager(Model,
        new PagerOptions { PageIndexParameterName = "pageInfo.PageIndex", Id = "pager", CssClass = "col-md-8", },
        new MvcAjaxOptions { UpdateTargetId = "divUpdateData", EnablePartialLoading = true, DataFormId = "formSearch", HttpMethod = "Post" }, new Dictionary<string, string> { })
    </div>
</div>

<form data-ajax="true" data-ajax-url="/POST/UserNew" data-ajax-begin="newBegin" data-ajax-success="newSucess" method="Post" class="form-horizontal">
    <div id="divNewUser" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4><b>新建用户</b></h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2">用户名</label>
                        <div class="col-sm-4"><input type="text" name="userInfo.Name" value="" class="form-control" required /></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">邮箱</label>
                        <div class="col-sm-6"><input type="text" name="userInfo.Email" value="" class="form-control" required /></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">密码</label>
                        <div class="col-sm-6"><input type="text" name="userInfo.Password" value="" class="form-control" required /></div>
                    </div>
                    <div class="alert alert-danger hide">警告</div>
                </div>
                <div class="modal-footer">                    
                    <button type="submit" class="btn btn-primary">添加用户</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form data-ajax="true" data-ajax-url="/POST/UserEdit" data-ajax-begin="Form_Begin" data-ajax-success="Form_Success" method="Post" class="form-horizontal">
    <div id="divEditUser" class="modal fade" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">编辑用户</h4>
                  </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2">编号</label>
                        <div class="col-sm-10">012fbad8-daf7-4aef-b8c1-e50bfa939825</div>
                    </div>                   
                    <div class="form-group">
                        <label class="control-label col-sm-2">用户名</label>
                        <div class="col-sm-10"><input type="text" name="userInfo.Name" value="" class="form-control" required autofocus /></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">邮箱</label>
                        <div class="col-sm-10"><input type="text" name="userInfo.Email" value="" class="form-control" required /></div>
                    </div>
                    <div id="divAlter" class="alert alert-warning alert-dismissable" style="display:none;">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <strong>警告!</strong>  <span>23233</span>
                    </div>
                    <div class="alert alert-success" style="display:none;">>修改成功</div>
                
                </div>
                <div class="modal-footer">
                    <input type="submit" value="保存" class="btn btn-primary" />
                    <input type="button" value="关闭" class="btn btn-default" data-dismiss="modal" />
              </div>
            </div>
        </div>
    </div>
</form>


@section ScriptSection
{

    <script type="text/javascript">
        function newBegin(){$("input[type=submit]").button("loading");}
        function newSucess(){
            $("input[type=submit]").button("reset");
        }
    </script>

    <script type="text/javascript">
        $(function(){
            $("#divUpdateData a").each(function(){
                $(this).click(function(){
                    console.log(1);
                    $('#divEditUser').modal()
                });
            });
        
        })
    </script>
}