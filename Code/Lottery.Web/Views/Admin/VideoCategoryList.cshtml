@using Webdiyer.WebControls.Mvc;
@model PagedList<Lottery.Entity.VideoCategoryInfo>
@{ViewBag.Title = "视频分类管理";}
<div class="pull-right"><input type="button" class="btn btn-primary form-control" data-toggle="modal" data-target="#divNew" value="新建视频分类" /></div>      
<div id="divList" class="table-responsive clearfix"> 
    <table class="table table-striped table-bordered table-hover">        
        <tr>
            <th>编号</th>
            <th>名称</th>
            <th>简介</th>
            <th>日期</th>
            <th>操作</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr data-key="@item.ID">
                <td data-name="ID">@item.ID</td>
                <td data-name="Name" >@item.Name</td>
                <td data-name="Memo" >@item.Memo</td>
                <td data-name="Date" >@item.Date</td>
                <td>
                    <input type="button" value="编辑" data-type="edit" class="btn btn-default" />
                    <span class="hide" data-name="PID">@item.PID</span>
                </td>
            </tr>
        }
    </table>
</div>

<form id="formNew" data-ajax="true" data-ajax-url="/POST/VideoCategoryNew" data-ajax-begin="newBegin" data-ajax-failure="newFailure" data-ajax-success="newSucess" method="Post" class="form-horizontal">
    <div id="divNew" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4><strong>新建视频分类</strong></h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2">名称</label>
                        <div class="col-sm-4"><input type="text" name="videoCategoryInfo.Name" class="form-control" required /></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">上级</label>
                        <div class="col-sm-6"><input type="text" name="videoCategoryInfo.PID" class="form-control" required/></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">简介</label>
                        <div class="col-sm-6"><input type="text" name="videoCategoryInfo.Memo" class="form-control" required/></div>
                    </div>
                    <div id="divAlertNew" class="alert alert-warning hide"><span></span><button class="close">x</button></div>
                </div>
                <div class="modal-footer">                    
                    <button type="submit" id="btnNew" class="btn btn-primary">添加视频分类</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form id="formEdit" data-ajax="true" data-ajax-url="/POST/VideoCategoryEdit" data-ajax-begin="editBegin" data-ajax-failure="editFailure" data-ajax-success="editSucess" method="Post" class="form-horizontal">
    <div id="divEdit" class="modal fade" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4><strong>编辑视频分类</strong></h4>
                  </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2">编号</label>
                        <div data-name="ID" class="col-sm-10"></div>
                    </div>                   
                    <div class="form-group">
                        <label class="control-label col-sm-2">名称</label>
                        <div class="col-sm-10"><input type="text" name="videoCategoryInfo.Name" data-name="Name" class="form-control" required autofocus /></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">上级</label>
                        <div class="col-sm-10"><input type="text" name="videoCategoryInfo.PID" data-name="PID" class="form-control" required /></div>
                    </div>   
                    <div class="form-group">
                        <label class="control-label col-sm-2">简介</label>
                        <div class="col-sm-10"><input type="text" name="videoCategoryInfo.Memo" data-name="Memo" class="form-control" required /></div>
                    </div>     
                    <div id="divAlterEdit" class="alert alert-info hide"><span></span><button class="close">x</button></div>          
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="userInfo.ID"  data-name="ID" />
                    <input type="submit" value="保存" class="btn btn-primary" />
                    <input type="button" value="关闭" class="btn btn-default" data-dismiss="modal" />
              </div>
            </div>
        </div>
    </div>
</form>


@section ScriptSection
{
    <script type="text/javascript">
        $(function(){
            $("div.alert").find("button").click(function(e){
                $(this).closest("div").addClass("hide");
                e.preventDefault();
            });
        })
    </script>

    <script type="text/javascript">        
        function newBegin(){$("#btnNew").button("加载中...");}
        function newFailure(){$("#btnNew").button("reset");}
        function newSucess(json){
            $("#btnNew").button("reset");
            if(!json.Success){
                $("#divAlertNew").removeClass("hide").find("span").html(json.Message);
            }
            else{
                $("#formNew")[0].reset();
                $("#divNew").modal("hide");
                var trHtml = $("<tr><td data-name='ID'></td><td data-name='Name'></td><td data-name='Memo'></td><td data-name='Date'></td><td><input type='button' data-type='edit' value='编辑' class='btn btn-default' /></td></tr>");
                for(var attr in json.Model){
                    trHtml.find("td[data-name="+attr+"]").html(json.Model[attr]);
                }
                trHtml.attr("data-key",json.Model.ID);
                $("#divList tr:eq(0)").after(trHtml);
            }
        }
    </script>

    <script type="text/javascript">
        $(function(){
            //列表监听事件
             $("#divList").on("click","input","data",function(e){
                 var data = $(this).attr("data-type");
                 if(data=="edit"){ //编辑事件
                    var tr = $(this).closest("tr");
                    $("#divEdit").find("[data-name]").each(function(){
                       var tagName = $(this)[0].tagName.toUpperCase();
                       if(tagName == "INPUT")$(this).val(tr.find("[data-name="+$(this).attr("data-name")+"]").html());
                       else $(this).html(tr.find("td[data-name="+$(this).attr("data-name")+"]").html());                       
                    });
                    $("#divEdit").modal("show");
                 }
             });        
        })
        function editBegin(){$("#btnEdit").button("加载中...");}
        function editFailure(){$("#btnEdit").button("reset");}
        function editSucess(json){
            $("#btnNew").button("reset");
            if(!json.Success){
                $("input[type=submit]").button("reset");
                $("#divAlterEdit").removeClass("hide").find("span").html(json.Message);
            }
            else{
                $("#formEdit")[0].reset();
                $("#divEdit").modal("hide");
                var tr = $("tr[data-key="+json.Model.ID+"]");
                for(var attr in json.Model){
                    tr.find("[data-name="+attr+"]").html(json.Model[attr]);
                }
            }
        }
    </script>
}